{
  "manifest_version": 2,

  "name": "OpenU-KeepMeIn",
  "description": "Simple Chrome extension which refreshes your *.openu.ac.il tabs so you'll stay logged in.",
  "version": "1.6.0",
  "icons": { "16": "refresh16.png",
    "48": "refresh48.png",
    "128": "refresh128.png" },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://sheilta.apps.openu.ac.il/*"],
      "css": ["sheilta.css"],
      "js": ["axios.js","jquery.js","sheilta.js"]
    }
  ],
  "permissions": [
    "tabs",
    "alarms"
  ]
}
